<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ListItem.TextView.To" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_list_item_to</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ListItem.TextView.MessageText" parent="AppTheme">
        <item name="android:textColor">@color/material_gray_600</item>
        <item name="android:textSize">@dimen/text_size_list_item_text</item>
    </style>

    <style name="AppTheme.ListItem.TextView.DayNumber" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_list_item_day_number</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="AppTheme.ListItem.TextView.Month" parent="AppTheme.ListItem.TextView.DayNumber">
        <item name="android:textSize">@dimen/text_size_list_item_month</item>
    </style>

    <style name="AppTheme.ListItem.TextView.Year" parent="AppTheme.ListItem.TextView.DayNumber">
        <item name="android:textSize">@dimen/text_size_list_item_year</item>
    </style>

    <style name="AppTheme.ListItem.TextView.Time" parent="AppTheme">
        <item name="android:textColor">@color/blue_accent_200</item>
        <item name="android:textSize">@dimen/text_size_list_item_time</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
